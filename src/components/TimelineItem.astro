---
import "../styles/components/timeline.css";
import { type TimelineProps } from "../types";

const {
    title,
    subtitle,
    description,
    points = [],
} = Astro.props as TimelineProps;
---

<div class="timeline-item">
    <div class="timeline-title">{title}</div>
    <div class="timeline-subtitle">{subtitle}</div>
    <div class="timeline-description">
        {description}

        <ul class="timeline-point-container">
            {points.map((point) => <li class="timeline-point">{point}</li>)}
        </ul>
    </div>
    {(description || points.length > 0) && <i class="timeline-arrow" />}
</div>
