---
import '../styles/components/card.css'
import { type CardProps } from '../types'

const {
    title,
    header
} = Astro.props as CardProps;
---

<div class="card" >
    <h1 class="card-title">{title}</h1>
    {header ? <h2 class="card-header">{header}</h2> : null}
    <div class="card-content">
        <slot />
    </div>
</div>